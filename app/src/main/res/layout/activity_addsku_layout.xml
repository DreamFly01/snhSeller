<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <include layout="@layout/heard_layout"></include>
    <LinearLayout
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:paddingLeft="30pt"
        android:paddingRight="30pt"
        android:paddingTop="10pt"
        android:paddingBottom="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:textColor="@color/txt_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:text="规格名称："
            />
        <EditText
            android:id="@+id/et_01"
            android:layout_marginLeft="20pt"
            android:padding="5pt"
            android:background="@drawable/shape_range_gray_20_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入规格名称"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="30pt"
        android:paddingRight="30pt"
        android:paddingTop="10pt"
        android:paddingBottom="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:textColor="@color/txt_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:text="规&#160;&#160;格&#160;&#160;值："
            />
        <EditText
            android:id="@+id/et_02"
            android:layout_marginLeft="20pt"
            android:inputType="number"
            android:padding="5pt"
            android:background="@drawable/shape_range_gray_20_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入正整数（单位：件）"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="30pt"
        android:paddingRight="30pt"
        android:paddingTop="10pt"
        android:paddingBottom="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:textColor="@color/txt_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:text="批&#160;&#160;发&#160;&#160;价："
            />
        <EditText
            android:id="@+id/et_03"
            android:layout_marginLeft="20pt"
            android:inputType="number"
            android:padding="5pt"
            android:background="@drawable/shape_range_gray_20_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入批发价"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="30pt"
        android:paddingRight="30pt"
        android:paddingTop="10pt"
        android:paddingBottom="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:textColor="@color/txt_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:text="零&#160;&#160;售&#160;&#160;价："
            />
        <EditText
            android:inputType="number"
            android:id="@+id/et_04"
            android:layout_marginLeft="20pt"
            android:padding="5pt"
            android:background="@drawable/shape_range_gray_20_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入零售价"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="30pt"
        android:paddingRight="30pt"
        android:paddingTop="10pt"
        android:paddingBottom="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:textColor="@color/txt_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:text="库&#160;&#160;&#160;&#8201;&#160;&#160;&#160;&#8201;存："
            />
        <EditText
            android:inputType="number"
            android:id="@+id/et_05"
            android:layout_marginLeft="20pt"
            android:padding="5pt"
            android:background="@drawable/shape_range_gray_20_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入库存"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="30pt"
        android:paddingRight="30pt"
        android:paddingTop="10pt"
        android:paddingBottom="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:textColor="@color/txt_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:text="重&#160;&#160;&#160;&#8201;&#160;&#160;&#160;&#8201;量："
            />
        <EditText
            android:inputType="number"
            android:id="@+id/et_06"
            android:layout_marginLeft="20pt"
            android:padding="5pt"
            android:background="@drawable/shape_range_gray_20_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入重量（单位：KG）"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30pt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/txtSize_30"
            android:text="注意："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sku_tip"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"
            />
    </LinearLayout>
</LinearLayout>
