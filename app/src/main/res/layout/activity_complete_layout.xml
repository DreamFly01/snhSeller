<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/merchant_review_bg">
    <include layout="@layout/heard_white_layout"></include>
    <ImageView
        android:layout_marginTop="50pt"
        android:layout_gravity="center"
        android:layout_marginLeft="50pt"
        android:layout_marginRight="50pt"
        android:layout_width="190pt"
        android:layout_height="110pt"
        android:background="@drawable/mercantin_review_crown"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="50pt"
        android:layout_marginRight="50pt"
        android:layout_width="match_parent"
        android:layout_height="300pt"
        android:background="@drawable/merchants_review_top_bg"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20pt"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60pt"
            android:text="店铺入驻完成"
            android:textColor="@color/white"/>
        <TextView
            android:layout_marginTop="20pt"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:text="请点击下方登录"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="50pt"
        android:layout_marginRight="50pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30pt"
        android:paddingBottom="80pt"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/gray_1"
            android:layout_marginTop="40pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电脑登录地址："
            android:textSize="@dimen/txtSize_28"/>
        <TextView
            android:id="@+id/tv_url"
            android:textColor="@color/gray_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="------------"
            android:textSize="@dimen/txtSize_28"/>
        <TextView
            android:textColor="@color/gray_1"
            android:id="@+id/tv_phone"
            android:layout_marginTop="40pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录账户："
            android:textSize="@dimen/txtSize_28"/>
        <TextView
            android:textColor="@color/gray_1"
            android:id="@+id/tv_psw"
            android:layout_marginTop="40pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录密码："
            android:textSize="@dimen/txtSize_28"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_loging"
        android:layout_gravity="center"
        android:layout_marginLeft="50pt"
        android:layout_marginRight="50pt"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="180pt"
        android:background="@drawable/merchants_review_bottom_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50pt"
            android:text="登录"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
