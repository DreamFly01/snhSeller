<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg">
    <include layout="@layout/heard_white_layout"></include>
    <LinearLayout
        android:paddingTop="50pt"
        android:paddingLeft="30pt"
        android:paddingRight="30pt"
        android:paddingBottom="40pt"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_36"
                android:text="今日成交额"
                android:textColor="@color/txt_dark"/>
            <TextView
                android:layout_marginTop="10pt"
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_34"
                android:text="0.00元"
                android:textColor="@color/txt_blue"/>
        </LinearLayout>
        <ImageView
            android:background="@color/color_app_bg"
            android:layout_width="2dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_36"
                android:text="今日订单数"
                android:textColor="@color/txt_dark"/>
            <TextView
                android:layout_marginTop="10pt"
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_34"
                android:text="0笔"
                android:textColor="@color/txt_blue"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:paddingBottom="20pt"
        android:layout_marginTop="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_marginTop="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_num1"
                android:padding="20pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="最近七日订单数"
                android:textSize="@dimen/txtSize_26"
                android:background="@drawable/shape_soild_blue_left_bg"/>
            <TextView
                android:id="@+id/tv_price"
                android:padding="20pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_blue"
                android:text="最近七日成交额数"
                android:textSize="@dimen/txtSize_26"
                android:background="@drawable/shape_rangle_blue_right_bg"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_marginTop="40pt"
            android:layout_width="match_parent"
            android:layout_height="600pt"></com.github.mikephil.charting.charts.LineChart>
    </LinearLayout>
</LinearLayout>
