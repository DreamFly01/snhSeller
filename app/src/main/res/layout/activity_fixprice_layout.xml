<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    >
    <include layout="@layout/heard_layout"></include>
    <LinearLayout
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:gravity="center"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_shop_logo"
            android:layout_width="30pt"
            android:layout_height="30pt"
            />
        <TextView
            android:id="@+id/tv_shopName"
            android:layout_weight="1"
            android:layout_marginLeft="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="你的衣服"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_marginLeft="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="待支付"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/color_app_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="30pt">

        <ImageView
            android:id="@+id/iv_product_logo1"
            android:layout_width="120pt"
            android:layout_height="120pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/txt_dark"
                    android:id="@+id/tv_GoodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="hahahahhahahhhhhhhhhhhhh"
                    android:textSize="@dimen/txtSize_28" />

                <TextView
                    android:textColor="@color/txt_dark"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="80"
                    android:textSize="@dimen/txtSize_28" />

            </LinearLayout>

            <TextView
                android:textColor="@color/txt_dark"
                android:id="@+id/tv_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[黑色，均码]"
                android:textSize="@dimen/txtSize_28"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/txt_dark"
                    android:id="@+id/tv_Number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x1"
                    android:textSize="@dimen/txtSize_28" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            android:paddingRight="40pt"
            android:paddingLeft="40pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改价"
            android:textColor="@color/white"
            android:background="@color/app_red"
            android:textSize="@dimen/txtSize_34"/>
        <TextView
            android:layout_marginLeft="30pt"
            android:padding="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
        <TextView
            android:id="@+id/tv_price1"
            android:layout_marginLeft="30pt"
            android:padding="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收："
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
        <LinearLayout
            android:layout_marginBottom="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="30pt"
                android:padding="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一口改价"
                android:textSize="@dimen/txtSize_30"
                android:textColor="@color/app_red"/>
            <EditText
                android:inputType="number"
                android:id="@+id/et_price"
                android:background="@color/color_app_bg"
                android:layout_marginLeft="20pt"
                android:padding="10pt"
                android:layout_width="180pt"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_30"
                android:textColor="@color/txt_dark"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_marginLeft="30pt"
            android:padding="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
        <TextView
            android:id="@+id/tv_yunfei"
            android:layout_marginLeft="30pt"
            android:padding="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收："
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
        <LinearLayout
            android:layout_marginBottom="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="30pt"
                android:padding="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费金额"
                android:textSize="@dimen/txtSize_30"
                android:textColor="@color/app_red"/>
            <EditText
                android:inputType="number"
                android:background="@color/color_app_bg"
                android:id="@+id/et_yunfei"
                android:layout_marginLeft="20pt"
                android:padding="10pt"
                android:layout_width="180pt"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_30"
                android:textColor="@color/txt_dark"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:padding="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_yunfei1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(ssss)"
            android:textSize="@dimen/txtSize_26"
            />
        <TextView
            android:id="@+id/tv_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(ssss)"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10pt">
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <include layout="@layout/commit_layout"></include>
    </LinearLayout>
</LinearLayout>
