<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    >
    <include layout="@layout/heard_white_layout"></include>

    <android.support.v4.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_marginTop="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            android:paddingRight="40pt"
            android:paddingLeft="40pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改价"
            android:textColor="@color/white"
            android:background="@color/app_red"
            android:textSize="@dimen/txtSize_34"/>
        <TextView
            android:layout_marginLeft="30pt"
            android:padding="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
        <TextView
            android:id="@+id/tv_price1"
            android:layout_marginLeft="30pt"
            android:padding="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收："
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
        <LinearLayout
            android:layout_marginBottom="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="30pt"
                android:padding="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一口改价"
                android:textSize="@dimen/txtSize_30"
                android:textColor="@color/app_red"/>
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/et_price"
                android:background="@color/color_app_bg"
                android:layout_marginLeft="20pt"
                android:padding="10pt"
                android:layout_width="180pt"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_30"
                android:textColor="@color/txt_dark"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="30pt"
            android:padding="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_yunfei"
            android:layout_marginLeft="30pt"
            android:padding="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收："
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="30pt"
                android:padding="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费金额"
                android:textSize="@dimen/txtSize_30"
                android:textColor="@color/app_red"/>
            <EditText
                android:inputType="numberDecimal"
                android:background="@color/color_app_bg"
                android:id="@+id/et_yunfei"
                android:layout_marginLeft="20pt"
                android:padding="10pt"
                android:layout_width="180pt"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_30"
                android:textColor="@color/txt_dark"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:padding="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_yunfei1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(ssss)"
            android:textSize="@dimen/txtSize_26"
            />
        <TextView
            android:id="@+id/tv_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(ssss)"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/txt_dark"
            />
    </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10pt">
        <Button
            android:id="@+id/btn_commit"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="690pt"
            android:layout_height="100pt"
            android:text="登录"
            android:textColor="@color/txt_white"
            android:textSize="36pt"
            android:background="@drawable/commit_color_selector"/>
    </LinearLayout>
</LinearLayout>
