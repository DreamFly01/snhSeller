<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/heard_white_layout"></include>

    <include layout="@layout/search_layout"></include>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:background="@color/color_app_bg"/>
    <include layout="@layout/refresh_layout"></include>
    <Button
        android:layout_marginBottom="20pt"
        android:id="@+id/btn_commit"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="690pt"
        android:layout_height="80pt"
        android:text="登录"
        android:textColor="@color/txt_white"
        android:textSize="30pt"
        android:background="@drawable/commit_color_selector"/>
</LinearLayout>
