<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    >
    <include layout="@layout/heard_layout"></include>
    <android.support.v4.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_time"
        android:layout_marginTop="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue">
        <TextView
            android:id="@+id/tv_cancle_time"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/white"
            android:padding="20pt"
            />
    </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:background="@color/color_app_bg"
                android:orientation="vertical"
                android:paddingBottom="20pt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="30pt">

                    <LinearLayout
                        android:id="@+id/ll_change_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txtSize_30" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30pt"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20pt"
                                android:layout_height="20pt"
                                android:layout_gravity="center"
                                android:background="@drawable/address_logo" />

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10pt"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textSize="@dimen/txtSize_30" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="4pt"
                    android:background="@drawable/address_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="30pt"
                    android:paddingTop="10pt"
                    android:paddingBottom="10pt">

                    <ImageView
                        android:id="@+id/iv_shop_logo"
                        android:layout_width="50pt"
                        android:layout_height="50pt"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tv_shopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20pt"
                        android:textSize="@dimen/txtSize_26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:background="@color/color_app_bg"
                    android:orientation="horizontal"
                    android:padding="30pt">

                    <ImageView
                        android:id="@+id/iv_product_logo"
                        android:layout_width="100pt"
                        android:layout_height="100pt" />

                    <TextView
                        android:id="@+id/tv_product_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20pt"
                        android:textSize="@dimen/txtSize_26" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="20pt"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30pt"
                android:paddingRight="30pt"
                android:paddingTop="20pt"
                android:paddingBottom="20pt"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:textColor="@color/txt_dark"
                    android:text="交易方式"
                    />
                <TextView
                    android:id="@+id/tv_pay_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="----"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4pt"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30pt"
                android:paddingRight="30pt"
                android:paddingTop="20pt"
                android:paddingBottom="20pt"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:textColor="@color/txt_dark"
                    android:text="运费"
                    />
                <TextView
                    android:id="@+id/tv_yunfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="----"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4pt"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30pt"
                android:paddingRight="30pt"
                android:paddingTop="20pt"
                android:paddingBottom="20pt"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:textColor="@color/txt_dark"
                    android:text="订单总价"
                    />
                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="-----"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4pt"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30pt"
                android:paddingRight="30pt"
                android:paddingTop="20pt"
                android:paddingBottom="20pt"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:textColor="@color/txt_dark"
                    android:text="留言"
                    />
                <TextView
                    android:id="@+id/tv_liuyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="-----"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20pt"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20pt"
                android:paddingRight="30pt"
                android:paddingLeft="30pt"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:textColor="@color/txt_dark"
                    android:text="订单信息"
                    />
                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_marginTop="20pt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="-----"
                    />
                <TextView
                    android:id="@+id/tv_creat_time"
                    android:layout_marginTop="20pt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="----"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_pay_time"
                    android:layout_marginTop="20pt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="----"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_send_time"
                    android:layout_marginTop="20pt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="----"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_deal_time"
                    android:layout_marginTop="20pt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="----"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:layout_marginBottom="20pt"
            android:layout_marginRight="30pt"
            android:layout_gravity="right"
            android:id="@+id/tv_state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_20_bg"
            android:paddingLeft="40pt"
            android:paddingTop="10pt"
            android:paddingRight="40pt"
            android:paddingBottom="10pt"
            android:text="改价"
            android:textColor="@color/app_red"
            android:textSize="@dimen/txtSize_28" />
        <TextView
            android:layout_marginBottom="20pt"
            android:layout_marginRight="30pt"
            android:layout_gravity="right"
            android:id="@+id/tv_state1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_20_bg"
            android:paddingLeft="40pt"
            android:paddingTop="10pt"
            android:paddingRight="40pt"
            android:paddingBottom="10pt"
            android:text="改价"
            android:textColor="@color/app_red"
            android:textSize="@dimen/txtSize_28" />
    </LinearLayout>

</LinearLayout>
