<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical">
<include layout="@layout/heard_layout"></include>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300pt"
        android:background="@drawable/pay_bg"/>
    <LinearLayout
        android:layout_marginTop="2pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_1"
            android:text="订单编号"
            android:textSize="@dimen/txtSize_30"/>
        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T20181222704264342"
            android:textColor="@color/gray_1"
            android:textSize="@dimen/txtSize_30"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计金额"
            android:textColor="@color/gray_1"
            android:textSize="@dimen/txtSize_30"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥78.00"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/app_red"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_01"
        android:layout_marginTop="2pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经验值抵扣"
            android:textSize="24pt"/>
        <TextView
            android:id="@+id/tv_integerl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:textSize="24pt"/>
        <ImageView
            android:id="@+id/iv_01"
            android:layout_marginLeft="40pt"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/pay_selete"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_02"
        android:layout_marginTop="2pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@drawable/pay_account_bg"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_marginLeft="5pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:textColor="@color/gray_1"
            android:textSize="@dimen/txtSize_30"/>

        <ImageView
            android:id="@+id/iv_02"
            android:layout_marginLeft="40pt"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/pay_normall"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择支付方式"
            android:textColor="@color/gray_1"
            android:textSize="@dimen/txtSize_30"/>
        <LinearLayout
            android:id="@+id/ll_03"
            android:layout_marginTop="2pt"
            android:background="@color/white"
            android:paddingTop="30pt"
            android:paddingBottom="30pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@drawable/wechat_pay_bg"/>
            <TextView
                android:layout_marginLeft="5pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="@color/gray_1"
                android:textSize="@dimen/txtSize_30"/>

            <ImageView
                android:id="@+id/iv_03"
                android:layout_marginLeft="40pt"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:background="@drawable/pay_normall"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_04"
            android:layout_marginTop="2pt"
            android:background="@color/white"
            android:paddingTop="30pt"
            android:paddingBottom="30pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@drawable/ali_pay_bg"/>
            <TextView
                android:layout_marginLeft="5pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="@color/gray_1"
                android:textSize="@dimen/txtSize_30"/>

            <ImageView
                android:id="@+id/iv_04"
                android:layout_marginLeft="40pt"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:background="@drawable/pay_normall"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_commit"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="30pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_red"
            android:textColor="@color/white"
            android:textSize="30pt"
            android:text="确认支付"/>
    </LinearLayout>
</LinearLayout>
