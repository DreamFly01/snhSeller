<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical">
<include layout="@layout/heard_layout"></include>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="200pt"
        android:layout_gravity="center"
        android:layout_width="620pt"
        android:layout_height="700pt"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_gravity="center"
        android:layout_width="600pt"
        android:layout_height="600pt" />
        <TextView
            android:gravity="center"
            android:layout_marginBottom="10pt"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="赶紧保存或分享给你的铁粉"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/txtSize_40"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_bc"
            android:gravity="center"
            android:padding="30pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/txtSize_40"
            android:background="@color/txt_blue"/>
        <TextView
            android:id="@+id/tv_share"
            android:gravity="center"
            android:padding="30pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textColor="@color/white"
            android:textSize="@dimen/txtSize_40"
            android:background="@color/app_red"/>
    </LinearLayout>
</LinearLayout>
