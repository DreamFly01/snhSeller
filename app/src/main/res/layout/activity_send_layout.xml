<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical">
<include layout="@layout/heard_layout"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="30pt">

        <ImageView
            android:layout_width="30pt"
            android:layout_height="35pt"
            android:layout_gravity="center"
            android:background="@drawable/address_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:textSize="@dimen/txtSize_30" />

                <TextView
                    android:id="@+id/tv_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30pt"
                    android:text="123456789"
                    android:textSize="@dimen/txtSize_30" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="20pt"
                android:text="新城科技园"
                android:textSize="@dimen/txtSize_30" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:gravity="center"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_shop_logo"
            android:layout_width="30pt"
            android:layout_height="30pt"
            />
        <TextView
            android:id="@+id/tv_shopName"
            android:layout_weight="1"
            android:layout_marginLeft="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="你的衣服"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_marginLeft="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="待支付"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/color_app_bg"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_youfei"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22pt"
            android:text="合计："
            />
        <TextView
            android:id="@+id/tv_all_num"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24pt"
            android:text="合计："
            android:textColor="@color/txt_dark"/>
        <TextView
            android:id="@+id/tv_TotalMoney1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26pt"
            android:text="￥24"
            android:textColor="@color/txt_dark"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_01"
        android:gravity="center"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货方式"
            android:textSize="30pt"
            />
        <TextView
            android:id="@+id/tv_fhfs"
            android:paddingRight="20pt"
            android:gravity="right"
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择物流"
            android:textSize="30pt"
            />
        <ImageView
            android:layout_width="15pt"
            android:layout_height="25pt"
            android:background="@drawable/img_aray_right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_02"
        android:gravity="center"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递公司"
            android:textSize="30pt"
            />
        <TextView
            android:id="@+id/tv_kdgs"
            android:paddingRight="20pt"
            android:gravity="right"
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择快递公司"
            android:textSize="30pt"
            />
        <ImageView
            android:layout_width="15pt"
            android:layout_height="25pt"
            android:background="@drawable/img_aray_right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_03"
        android:gravity="center"
        android:layout_marginTop="20pt"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="30pt"
            android:layout_marginLeft="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递单号"
            android:textSize="30pt"
            />
        <EditText
            android:inputType="text"
            android:background="@null"
            android:id="@+id/et_kddh"
            android:paddingRight="40pt"
            android:gravity="right|center"
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30pt"
            android:hint="请输入快递单号"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10pt">
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <include layout="@layout/commit_layout"></include>
    </LinearLayout>
</LinearLayout>
