<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_red"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20pt"
            android:paddingLeft="20pt"
            android:paddingBottom="20pt"
            android:background="@color/app_red"
            >
            <TextView
                android:id="@+id/heard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="36pt" />

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30pt"
                android:visibility="visible"

                >
                <ImageView
                    android:id="@+id/heard_menu"
                    android:layout_width="42pt"
                    android:layout_height="40pt"
                    android:src="@drawable/store_share"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/heard_tv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="50pt"
                    android:textSize="30pt"
                    />
            </FrameLayout>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_menu"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200pt"
            android:background="@color/app_red"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="20pt"
            android:layout_width="match_parent"
            android:layout_height="260pt"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/ll_menu_1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100pt"
                    android:layout_height="100pt"
                    android:background="@drawable/menu_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_dark"
                    android:textSize="@dimen/txtSize_34"
                    android:text="订单"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_menu_2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100pt"
                    android:layout_height="100pt"
                    android:background="@drawable/menu_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_dark"
                    android:textSize="@dimen/txtSize_34"
                    android:text="供销"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_menu_3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100pt"
                    android:layout_height="100pt"
                    android:background="@drawable/menu_3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_dark"
                    android:textSize="@dimen/txtSize_34"
                    android:text="资金"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_menu_4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100pt"
                    android:layout_height="100pt"
                    android:background="@drawable/menu_4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_dark"
                    android:textSize="@dimen/txtSize_34"
                    android:text="系统"/>
            </LinearLayout>
        </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2pt"
                android:background="@color/color_app_bg"/>
        <FrameLayout
            android:id="@+id/recent_contacts_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </FrameLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
