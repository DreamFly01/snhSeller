<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_head1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_red"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20pt"
            android:paddingLeft="20pt"
            android:paddingBottom="20pt"
            android:background="@color/app_red">

            <LinearLayout
                android:id="@+id/heard_back"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:gravity="center">

                <ImageView
                    android:layout_width="20pt"
                    android:layout_height="31pt"
                    android:src="@drawable/left_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/heard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="36pt" />

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30pt"
                android:visibility="visible"

                >
                <ImageView
                    android:id="@+id/heard_menu"
                    android:layout_width="42pt"
                    android:layout_height="40pt"
                    android:src="@drawable/store_share"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/heard_tv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="50pt"
                    android:textSize="30pt"
                    android:text="添加"
                    android:textColor="@color/white"
                    />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Small"
        android:id="@+id/tab_order"
        app:tabSelectedTextColor="@color/app_red"
        app:tabIndicatorColor="@color/app_red"
        android:layout_width="match_parent"
        android:layout_height="80pt">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:background="@color/color_app_bg"/>
</LinearLayout>
