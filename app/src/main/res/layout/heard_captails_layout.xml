<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_01"
        android:padding="50pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="44pt"
                android:layout_height="40pt"
                android:background="@drawable/captail_bg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货款总额"
                android:textSize="34pt"
                android:textColor="#161616"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40pt"
            android:gravity="center|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="30pt"
                android:textColor="#161616"
                />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textSize="55pt"
                android:textColor="@color/txt_dark"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="4pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_app_bg"
        >
        <LinearLayout

            android:background="@color/white"
            android:layout_width="374pt"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30pt"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30pt"
                android:text="可提现金额"
                android:textColor="@color/txt_dark"
                />
            <LinearLayout
                android:layout_marginTop="15pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25pt"
                android:textColor="@color/txt_dark"
                android:text="¥"
                />
            <TextView
                android:id="@+id/tv_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36pt"
                android:text="0.00"
                android:textColor="@color/txt_dark"
                />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2pt"
            android:layout_width="374pt"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30pt"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30pt"
                android:text="冻结金额"
                android:textColor="@color/txt_dark"
                />
            <LinearLayout
                android:layout_marginTop="15pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25pt"
                    android:textColor="@color/txt_dark"
                    android:text="¥"
                    />
                <TextView
                    android:id="@+id/tv_money2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36pt"
                    android:text="0.00"
                    android:textColor="@color/txt_dark"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_state"
        android:layout_marginBottom="20pt"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="20pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现记录："
        android:textSize="28pt"
        android:textColor="@color/txt_dark"
        />

</LinearLayout>
