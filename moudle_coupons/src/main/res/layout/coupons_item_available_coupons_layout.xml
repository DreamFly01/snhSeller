<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="30pt"
    >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="150pt"
        android:orientation="horizontal"
        android:background="@drawable/product_coupons_left_blue_bg"
        android:gravity="center"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/coupons_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30pt"
            android:text="name"
            />
        <TextView
            android:layout_marginLeft="10pt"
            android:id="@+id/coupons_item_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30pt"
            android:text="name"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="150pt"
        android:orientation="horizontal"
        android:background="@drawable/product_coupons_right_blue_bg"
        android:gravity="center"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30pt"
            android:text="点击使用"
            />
    </LinearLayout>

</LinearLayout>
